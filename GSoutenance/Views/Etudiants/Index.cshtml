@model IEnumerable<GSoutenance.Models.Etudiant>

@{
    ViewData["Title"] = "Index";
}

<h1 style="margin-bottom: 20px;">Table d'Etudiant</h1>

<form asp-controller="Etudiants" asp-action="Search" method="get" class="d-flex">
    <input class="form-control me-sm-2" type="search" placeholder="Search" name="searchString">
    <button type="submit" class="btn btn-primary">Search</button>
</form>


<p style="margin-top: 20px;">
    <a asp-action="Create" class="btn btn-outline-secondary">Ajouter NV</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EtudiantId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateN)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EtudiantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateN)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EtudiantId" class="btn btn-info">Modifier</a> |
                    <a asp-action="Details" asp-route-id="@item.EtudiantId" class="btn btn-warning">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EtudiantId" class="btn btn-danger">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
